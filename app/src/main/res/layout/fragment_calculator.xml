<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculator_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 整個內容置中 -->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <!-- 貓咪飲水量計算區塊 -->
        <TextView
            android:id="@+id/text_cat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cat's Water Intake Calculate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- 貓咪體重輸入 -->
        <EditText
            android:id="@+id/edit_weight_cat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Cat's weight(kg)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:padding="12dp"/>

        <!-- 貓咪飲水量顯示 -->
        <EditText
            android:id="@+id/edit_water_cat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Water Intake(ml)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:focusable="false"
            android:padding="12dp"/>

        <!-- 貓咪計算與清除按鈕並排 -->
        <LinearLayout
            android:id="@+id/button_container_cat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_calculate_cat"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Calculate" />

            <Button
                android:id="@+id/btn_clear_cat"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 分隔線 -->
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp" />

        <!-- 狗狗飲水量計算區塊 -->
        <TextView
            android:id="@+id/text_dog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dog's Water Intake Calculate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- 狗狗體重輸入 -->
        <EditText
            android:id="@+id/edit_weight_dog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Dog's weight (kg)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:padding="12dp"/>

        <!-- 狗狗飲水量顯示 -->
        <EditText
            android:id="@+id/edit_water_dog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Water Intake (ml)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:focusable="false"
            android:padding="12dp"/>

        <!-- 狗狗計算與清除按鈕並排 -->
        <LinearLayout
            android:id="@+id/button_container_dog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_calculate_dog"
                android:layout_width="10dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Calculate" />

            <Button
                android:id="@+id/btn_clear_dog"
                android:layout_width="10dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>